<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.buscar.BuscarFragment">

    <TextView
        android:id="@+id/text_inicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        android:text="Buscar"
        android:fontFamily="@font/nunito_extrablod"
        android:textColor="@color/moradoOscuro"
        android:textSize="30sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:hint="   Buscar historias, autores, categ..."
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:textSize="21dp"
        android:background="@drawable/busqueda"
        android:layout_marginRight="30dp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/divisor" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/fondo"
        android:orientation="vertical">

    <TextView
        android:id="@+id/busqueda"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:text="Por categorÃ­as"
        android:fontFamily="@font/nunito_extrablod"
        android:textSize="23sp" />

    <GridView
        android:id="@+id/grid_busqueda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:numColumns="1" />

    </LinearLayout>

</LinearLayout>