<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Configuracion">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/regresar_morado"
        />

    <TextView
        android:id="@+id/text_actividades"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Configuración"
        android:fontFamily="@font/nunito_extrablod"
        android:textColor="@color/moradoOscuro"
        android:textSize="25sp"
        android:background="@color/white"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/divisor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo"
        android:orientation="vertical">

        <Button
            android:layout_marginTop="50dp"
            android:id="@+id/btnEditarPerfil"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            app:backgroundTint="@null"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:textSize="17dp"
            android:fontFamily="@font/nunito_extrablod"
            android:background="@drawable/categoria"
            android:text="Editar perfil"
/>

        <Button
            android:id="@+id/btn_cambiar_perfil"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            app:backgroundTint="@null"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:textSize="17dp"
            android:fontFamily="@font/nunito_extrablod"
            android:background="@drawable/categoria"
            android:text="Cambiar de perfil" />

        <Button
            android:id="@+id/btn_ayuda"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginBottom="150dp"
            app:backgroundTint="@null"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:textSize="17dp"
            android:fontFamily="@font/nunito_extrablod"
            android:background="@drawable/categoria"
            android:text="Ayuda" />

        <Button
            android:id="@+id/btn_cerrar_sesion"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/rellenoCerrarSesion"
            android:textColor="@color/moradoOscuro"
            android:textAllCaps="false"
            android:text="Cerrar sesión"
            android:fontFamily="@font/nunito_blod"/>

    </LinearLayout>


</LinearLayout>