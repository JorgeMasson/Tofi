<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BienvenidaActivity"
    android:background="@drawable/bg_color">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/regresar"
        />

    <TextView
        android:id="@+id/text_bienvenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:fontFamily="@font/nunito_extrablod"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:text="Â¡Bienvenido!" />

    <TextView
        android:id="@+id/text_elige"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:fontFamily="@font/nunito_semiblod"
        android:textColor="@color/white"
        android:text="Elige tus temas favoritos" />

    <GridView
        android:id="@+id/grid_temas"
        android:layout_width="wrap_content"
        android:layout_height="429dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="30dp"
        android:numColumns="2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_color">

        <Button
            android:id="@+id/btnListo"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginVertical="40dp"
            android:textAllCaps="false"
            android:textSize="16dp"
            android:background="@drawable/botonverde"
            android:text="@string/btnListo"
            app:backgroundTint="@null" />

    </LinearLayout>

</LinearLayout>
