<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BienvenidaActivity"
android:background="@drawable/bg_color">

    <TextView
        android:id="@+id/text_bienvenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="104dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:text="Bienvenido" />

    <TextView
        android:id="@+id/text_elige"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:text="Elige tus temas favoritos!" />

    <GridView
        android:id="@+id/grid_historias"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="30dp"
        android:numColumns="2" />
    <View
        android:id="@+id/divisor"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="35dp"
        android:background="?android:attr/listDivider"/>

    <Button
        android:id="@+id/btnListo"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginVertical="40dp"
        android:layout_gravity="center"
        android:text="@string/btnListo" />
</LinearLayout>