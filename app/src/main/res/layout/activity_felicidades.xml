<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo"
    tools:context=".Felicidades">

    <TextView
        android:id="@+id/tv_calif"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/rectangulo_redondeado_verde"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="@font/nunito_extrablod"
        android:text="10/10"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:fontFamily="@font/nunito_extrablod"
        android:textColor="@color/moradoOscuro"
        android:layout_marginTop="40dp"
        android:text="Â¡Felicidades!"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:fontFamily="@font/nunito_blod"
        android:textColor="@color/moradoOscuro"
        android:gravity="center"
        android:text="Toma un regalo \n por tu esfuerzo"
        />

    <ImageView
        android:id="@+id/btnRegalo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:src="@drawable/regalo"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="center"
        android:fontFamily="@font/nunito_blod"
        android:textColor="@color/moradoOscuro"
        android:layout_marginTop="60dp"
        android:text="Toca el regalo para abrirlo"
        />

</LinearLayout>