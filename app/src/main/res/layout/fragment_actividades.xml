<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.biblioteca.BibliotecaFragment">

    <TextView
        android:id="@+id/text_actividades"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Actividades de historias"
        android:fontFamily="@font/nunito_extrablod"
        android:textColor="@color/moradoOscuro"
        android:textSize="28sp"
        android:background="@color/white"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="30dp"
        />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/divisor"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/fondo"
        android:orientation="vertical">

        <GridView
            android:id="@+id/grid_historias"
            android:layout_width="wrap_content"
            android:layout_height="235dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="30dp"
            android:numColumns="2" />

        <TextView
            android:id="@+id/busqueda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/nunito_extrablod"
            android:text="Por categorÃ­as"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <GridView
            android:id="@+id/grid_categorias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:numColumns="1" />
    </LinearLayout>

</LinearLayout>
